{
  "extends": "./tsconfig.json",
  "include": [
    // Include all source files from the original tsconfig
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".contentlayer/generated/**/*.ts",
    "vitest.config.ts",
    // Explicitly include test files for ESLint's type checking
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  // Exclude the same files as the original tsconfig if needed
  "exclude": [
    "node_modules",
    "supabase/functions" // Keep excluding supabase/functions if they have different TS needs
    // Don't need to exclude test files here as we explicitly include them above
    // "**/__tests__/**",
    // "app/**/__tests__/**",
    // "components/**/__tests__/**"
  ]
}
