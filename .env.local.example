# .env.local / Environment Variables

# === Supabase Configuration ===
# Public URL for your Supabase project
NEXT_PUBLIC_SUPABASE_URL=
# Public Anon key for your Supabase project (safe to expose in browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# Service Role key for bypassing RLS (KEEP SECRET - DO NOT EXPOSE IN BROWSER)
SUPABASE_SERVICE_ROLE_KEY=
# Optional: Explicit Supabase URL for backend/service clients (often same as NEXT_PUBLIC_)
# SUPABASE_URL=

# === Stripe Configuration ===
# Your Stripe account's secret key (KEEP SECRET)
STRIPE_SECRET_KEY=
# Your Stripe webhook endpoint's signing secret (KEEP SECRET)
STRIPE_WEBHOOK_SECRET=
# Your Stripe Connect Client ID for OAuth flow
STRIPE_CLIENT_ID=

# === Notification Services ===
# Resend API key for sending emails (KEEP SECRET)
RESEND_API_KEY=
# Email address used as the 'From' address for Resend emails (must be a verified domain in Resend)
FROM_EMAIL=
# Recipient email address for feedback submissions (Task 13)
FEEDBACK_RECIPIENT_EMAIL=
# Slack Webhook URL for sending Slack notifications (KEEP SECRET)
SLACK_WEBHOOK_URL=

# === Application Configuration ===
# The public base URL of your deployed site (e.g., https://yourapp.com)
NEXT_PUBLIC_SITE_URL=
# Controls display of beta features like the banner (e.g., 'beta', 'prod') (Task 13)
NEXT_PUBLIC_RELEASE_STAGE=beta

# === Observability (Sentry & Prometheus) (Task 12) ===
# Sentry Data Source Name (DSN) for server-side/worker error tracking (KEEP SECRET)
SENTRY_DSN=
# Public Sentry DSN for client-side error tracking (safe to expose in browser)
NEXT_PUBLIC_SENTRY_DSN=
# Your Sentry organization slug (used during build for source maps)
SENTRY_ORG=
# Your Sentry project slug (used during build for source maps)
SENTRY_PROJECT=
# Optional: Secret key for basic auth on the /api/metrics endpoint (KEEP SECRET if used)
PROM_METRICS_KEY=

# === Security & Access Control ===
# API Key used for demo purposes or specific integrations (KEEP SECRET if sensitive)
DEMO_API_KEY=
# Comma-separated list of allowed emails/domains for alpha/beta access (Optional feature)
ALPHA_ALLOW_LIST=
